<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.juego.controller.CombateController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">

    <Label fx:id="lblTurno" style="-fx-font-size: 18;" />

    <HBox spacing="20">
        <VBox>
            <Label text="Equipo Azul" />
            <ListView fx:id="listaEquipo1" prefHeight="200" />
        </VBox>
        <VBox>
            <Label text="Equipo Rojo" />
            <ListView fx:id="listaEquipo2" prefHeight="200" />
        </VBox>
    </HBox>

    <Button fx:id="btnAtacar" text="Atacar" onAction="#atacar" />
    <Label fx:id="lblMensaje" style="-fx-font-size: 16;" />
</VBox>
